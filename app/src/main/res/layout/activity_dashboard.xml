<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD180"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp">

            <Button
                android:id="@+id/logout"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_baseline_login_24" />

            <ImageView
                android:id="@+id/myprofile"
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/profile_icon" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Manager"
            android:textSize="30dp"
            android:fontFamily="@font/bangers"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="40dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/search_bg"
                android:paddingLeft="30dp"
                android:hint="Search Student"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="45dp"
                android:background="@drawable/ellpise" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/mystudents"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/students_cardview" />

            <ImageView
                android:id="@+id/mybus"
                android:layout_width="70dp"
                android:layout_height="88dp"
                android:background="@drawable/bus_cardview"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"/>

            <ImageView
                android:id="@+id/mydrivers"
                android:layout_width="70dp"
                android:layout_height="88dp"
                android:background="@drawable/driverrr"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"/>

            <ImageView
                android:id="@+id/pendingbills"
                android:layout_width="70dp"
                android:layout_height="88dp"
                android:background="@drawable/money_cardview"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/lipa" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buses"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="40dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/add" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>